#include <pwm.h>

void main()
{
    setup_adc(ADC_CLOCK_INTERNAL);            
    setup_adc_ports(AN0);          
    set_adc_channel(0);
    delay_ms(10);
    
    //configuración 
    setup_timer_2(T2_DIV_BY_4 249, 1); //se ajusta PWM a 1KHz
    setup_ccp1(CCP_PWM);//se ajusta el CCP para PWM  
    
    int valor;
    
    while(TRUE){
        valor = read_adc();
        delay_ms(100);
        set_pwm1_duty(valor); //se asigna el valor del PWM
        delay_ms(100);
       
    }
}

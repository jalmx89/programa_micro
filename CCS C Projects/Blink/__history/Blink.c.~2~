#include <Blink.h>

#use fast_io(B)

void main()
{

   port_b_pullups(TRUE);      //activo la resistencia de pullup interna
   set_tris_b(0x01);          //
   output_low(PIN_B1);
   

   while(TRUE)
   {
      if(input(PIN_B0) == 1){
         output_low(PIN_B1);
      }
      else{
         output_high(PIN_B1);
      }
      
   }

}

#include <motor_pap.h>

#use fast_io(D)
#use fast_io(B)

#define time 100 //variable defina para el tiempo de retardo
const byte backward[] = {0x01, 0x02, 0x04, 0x08 }; //secuencia para ir adelante
const byte forward[] = {0x08, 0x04, 0x02, 0x01 }; //secuencia para reversa
const byte full[] = {0x03, 0x06, 0x0A, 0x09 }; //secuencia para full, de 45 en 45°
const byte half[] = {0x01, 0x03, 0x02, 0x06, 0x04,0x0C, 0x08, 0x09}; //secuencia de medio paso

void main()
{
   set_tris_d(0);
   output_d(0);
   
   set_tris_b(0xff);
   output_b(0);
   
   while(TRUE)
   {
      if(input_b() == 0x01){
         for(int x=0; x <4; x++){
         output_d(forward[x]);
         delay_ms(time);
        }
      }
      
      if(input_b() == 0x02){
         for(int x=0; x <4; x++){
         output_d(backward[x]);
         delay_ms(time);
        }
      }
      
      if(input_b() == 0x04){
         for(int x=0; x <8; x++){
         output_d(half[x]);
         delay_ms(time);
        }
      }
      
       if(input_b() == 0x08){
         for(int x=0; x <8; x++){
         output_d(full[x]);
         delay_ms(time);
        }
      }
   }

}
